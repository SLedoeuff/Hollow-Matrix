{
	
}

ostream matrice::operator<< (ostream &o, matrice & m) // Surcharge Affichage
{
	o<<endl<<"matrice "<<this->name<<endl;
	o<<setw(10)<<right<<"ligne"<<setw(10)<<right<<"colonne"<<setw(10)<<right<<"valeur"<<endl;
	lcv* temp=tete;
	while(temp->suiv!=NULL)
	{
		if(temp->val!=0)
		{
			o<<setw(10)<<right<<temp->li<<setw(10)<<right<<temp->co<<setw(10)<<right<<temp->val<<endl;
			temp=temp->suiv;
		}
	}
	o<<setw(10)<<right<<temp->li<<setw(10)<<right<<temp->co<<setw(10)<<right<<temp->val<<endl;
	o<<endl;
}
