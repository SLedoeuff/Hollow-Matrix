using namespace std;

matrice matrice::operator+ (matrice m1, matrice m2) // Surcharge Addition
{
	matrice m3;

	m3 = m1+m2;

	return m3;
}

istream matrice::operator>> (istream &in, matrice & m) // Surcharge Lecture
{
	in >> m.name;
	in >> m.largeur;
	in >> m.hauteur;
	in >> m.tete;

	return in;

}

void matrice::operator- (matrice & m1, matrice & m2) // Surcharge Sousstraction
{
	matrice m3;

	mm3 = m1-m2;

	return m3;

}
matrice matrice::operator* (matrice & m1, matrice & m2) // Surcharge Multiplication
{
	matrice m3;

	mm3 = m1*m2;

	return m3;
}
